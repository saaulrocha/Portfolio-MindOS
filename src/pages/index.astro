---
import DesktopLayout from '../layouts/DesktopLayout.astro';
import BootSequence from '../components/BootSequence.astro';
import Window from '../components/Window.astro';
import { profile, experience, education, technologies, languages, projects } from '../data/profile';
import { 
  Brain, HardDrive, Cpu, Package, Sparkles, Terminal,
  MapPin, Calendar, Github, Linkedin, Mail, Phone, ExternalLink,
  GraduationCap, Briefcase, Code, CircleCheck, Clock, ShoppingBag
} from 'lucide-astro';
import LockScreen from '../components/LockScreen.astro';
import AppStore from '../components/AppStore.astro';
import SkillsCloud from '../components/SkillsCloud.astro';
---

<DesktopLayout title="MindOS — Saúl Rocha">
  <!-- Overlays (Lock Screen, Boot Sequence) -->
  <Fragment slot="overlay">
    <LockScreen />
    <BootSequence />
  </Fragment>
  
  <!-- Desktop Content (Hidden when locked) -->
  <div id="desktop-environment" class="container mx-auto px-4 py-6 max-w-5xl space-y-6 transition-opacity duration-700 opacity-0 pointer-events-none">
    
    <!-- Hero Section: Kernel -->
    <Window id="kernel" title="About — Saúl Rocha" icon={Brain}>
      <div class="flex flex-col md:flex-row gap-8">
        <!-- Left: Photo & Quick Info -->
        <div class="flex flex-col items-center md:items-start gap-4 shrink-0">
          <div class="relative group">
            <img 
              src="/saul-rocha.png" 
              alt="Saúl Rocha"
              class="w-32 h-32 rounded-2xl object-cover border-2 border-os-border group-hover:border-os-accent/50 transition-colors"
            />
            <div class="absolute -bottom-2 -right-2 w-6 h-6 rounded-full bg-os-success border-4 border-os-bg" title="Available" />
          </div>
          
          <!-- Status -->
          <div class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-os-success/10 border border-os-success/20">
            <div class="w-2 h-2 rounded-full bg-os-success animate-pulse" />
            <span class="text-xs font-medium text-os-success">Open to work</span>
          </div>
        </div>
        
        <!-- Right: Info -->
        <div class="flex-1 space-y-5">
          <!-- Name & Title -->
          <div>
            <h1 class="text-2xl md:text-3xl font-bold text-os-text">{profile.name}</h1>
            <p class="text-os-accent font-medium mt-1">{profile.title}</p>
          </div>
          
          <!-- Bio -->
          <p class="text-os-text-secondary leading-relaxed">
            {profile.bio}
          </p>
          
          <!-- Quick Stats -->
          <div class="flex flex-wrap gap-3">
            <div class="flex items-center gap-2 text-sm text-os-text-muted">
              <MapPin class="w-4 h-4" />
              <span>{profile.location}</span>
            </div>
            {languages.map(lang => (
              <div class="flex items-center gap-2 text-sm text-os-text-muted">
                <span 
                  class="w-6 h-4 rounded text-[10px] font-bold flex items-center justify-center text-white"
                  style={`background: ${lang.code === 'ES' ? '#c60b1e' : '#012169'}`}
                >
                  {lang.code}
                </span>
                <span>{lang.name}</span>
                <span class="text-os-text-secondary">({lang.level})</span>
              </div>
            ))}
          </div>
          
          <!-- Links -->
          <div class="flex flex-wrap gap-2">
            <a 
              href={profile.links.github}
              target="_blank"
              class="flex items-center gap-2 px-4 py-2 rounded-lg bg-os-surface hover:bg-os-surface-light border border-os-border hover:border-os-accent/30 transition-all text-sm font-medium"
            >
              <Github class="w-4 h-4" />
              GitHub
            </a>
            <a 
              href={profile.links.linkedin}
              target="_blank"
              class="flex items-center gap-2 px-4 py-2 rounded-lg bg-os-surface hover:bg-os-surface-light border border-os-border hover:border-os-accent/30 transition-all text-sm font-medium"
            >
              <Linkedin class="w-4 h-4" />
              LinkedIn
            </a>
            <a 
              href={`mailto:${profile.email}`}
              class="flex items-center gap-2 px-4 py-2 rounded-lg bg-os-accent text-white hover:bg-os-accent-light transition-all text-sm font-medium"
            >
              <Mail class="w-4 h-4" />
              Contact
            </a>
          </div>
        </div>
      </div>
    </Window>
    
    <!-- Two Column Layout -->
    <div class="grid md:grid-cols-2 gap-6">
      
      <!-- Experience: Processes -->
      <Window id="processes" title="Experience" icon={Briefcase}>
        <div class="space-y-5">
          {experience.map((exp, i) => (
            <div 
              class="group relative pl-6 pb-5 border-l-2 border-os-border last:pb-0 last:border-l-transparent hover:border-l-os-accent transition-colors"
              style={`animation: slide-up 0.4s ease-out ${i * 100}ms both`}
            >
              <!-- Timeline Dot -->
              <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-os-bg border-2 border-os-border group-hover:border-os-accent transition-colors flex items-center justify-center">
                {exp.status === 'active' && <div class="w-2 h-2 rounded-full bg-os-success" />}
              </div>
              
              <!-- Content -->
              <div class="space-y-2">
                <div class="flex items-start justify-between gap-2">
                  <div>
                    <h4 class="font-semibold text-os-text group-hover:text-os-accent transition-colors">{exp.company}</h4>
                    <p class="text-sm text-os-accent">{exp.role}</p>
                  </div>
                  <span class="text-xs font-mono text-os-text-muted shrink-0">{exp.period}</span>
                </div>
                
                <p class="text-sm text-os-text-muted">{exp.description}</p>
                
                <div class="flex flex-wrap gap-1.5 pt-1">
                  {exp.tech.map(t => (
                    <span class="px-2 py-0.5 text-xs rounded bg-os-surface border border-os-border text-os-text-secondary">
                      {t}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </Window>
      
      <!-- Education: Memory -->
      <Window id="memory" title="Education" icon={GraduationCap}>
        <div class="space-y-4">
          {education.map((edu, i) => (
            <div 
              class="group p-4 rounded-xl bg-os-surface/50 border border-os-border hover:border-os-accent/30 transition-all"
              style={`animation: slide-up 0.4s ease-out ${i * 100}ms both`}
            >
              <div class="flex items-start justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <h4 class="font-semibold text-os-text group-hover:text-os-accent transition-colors">
                    {edu.institution}
                  </h4>
                  <p class="text-sm text-os-text-muted mt-0.5">{edu.subtitle}</p>
                  <p class="text-sm text-os-text-secondary mt-2">{edu.program}</p>
                  <p class="text-xs text-os-text-muted mt-1">{edu.focus}</p>
                </div>
                <span class="text-[11px] font-mono text-os-text-muted whitespace-nowrap">{edu.period}</span>
              </div>
            </div>
          ))}
        </div>
      </Window>
    </div>
    
    <!-- Skills: Modules -->
    <Window id="modules" title="Skills & Technologies" icon={Code}>
      <SkillsCloud />
    </Window>
    
    <!-- ═══════════════════════════════════════════════════════════════════════
         PROJECTS SECTION — App Store Style
    ═══════════════════════════════════════════════════════════════════════ -->
    <Window id="artifacts" title="App Store — Projects" icon={ShoppingBag}>
      <AppStore />
    </Window>
    
    <!-- Contact: Logs -->
    <Window id="logs" title="Contact" icon={Terminal} variant="terminal">
      <div class="space-y-4 terminal-text">
        <!-- Terminal Commands -->
        <div class="space-y-2">
          <p><span class="text-os-success">~</span> <span class="text-os-text-muted">cat</span> contact.json</p>
          <div class="pl-4 text-os-text-secondary">
            <p>{"{"}</p>
            <p class="pl-4">"email": "<a href={`mailto:${profile.email}`} class="text-os-accent hover:underline">{profile.email}</a>",</p>
            <p class="pl-4">"phone": "<span class="text-os-text">{profile.phone}</span>",</p>
            <p class="pl-4">"linkedin": "<a href={profile.links.linkedin} class="text-os-accent hover:underline">saaulrocha</a>",</p>
            <p class="pl-4">"github": "<a href={profile.links.github} class="text-os-accent hover:underline">saaulrocha</a>"</p>
            <p>{"}"}</p>
          </div>
        </div>
        
        <div class="h-px bg-os-border" />
        
        <!-- Quick Actions -->
        <div class="flex flex-wrap gap-3 pt-2">
          <a 
            href={`mailto:${profile.email}`}
            class="flex-1 min-w-[180px] flex items-center justify-center gap-2 px-5 py-3 rounded-lg bg-os-accent text-white font-medium hover:bg-os-accent-light transition-all"
          >
            <Mail class="w-4 h-4" />
            Send Email
          </a>
          <a 
            href={profile.links.linkedin}
            target="_blank"
            class="flex-1 min-w-[180px] flex items-center justify-center gap-2 px-5 py-3 rounded-lg bg-os-surface-light border border-os-border font-medium hover:border-os-accent/30 transition-all"
          >
            <Linkedin class="w-4 h-4" />
            Connect
          </a>
        </div>
      </div>
    </Window>
    
  </div>
</DesktopLayout>
